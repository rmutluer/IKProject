<body style="background-color: #e4d8da;">

    <div class="limiter">
        <div class="container-lg" style="background-color: #e4d8da; margin-left:40%;margin-top:5%;">
            <div class="wrap-login100 p-t-30 p-b-50">
                <img style="width:150px;height:150px;margin-left:120px" src="~/images/loginfoto.png" />
                <form style=" border:groove" class="login100-form validate-form p-b-33 p-t-5" asp-controller="Home" asp-action="Reset" method="post">
                    @* Burada İdi bir şekilde alamak gerekiyor *@
                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" name="email" placeholder="Email">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        <button class="btn"  style="color: white; background-color: #478ba2;  border-radius: 40px; width: 55%; font-size:large; " value="@ViewBag.userResetEmail">
                            GÖNDER
                        </button>

                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        @if (ViewBag.Sonuc != null)
                        {
                            <p>@ViewBag.Sonuc</p>
                        }
                        else
                        {
                            <p class="text-danger">@ViewBag.Sonuc</p>
                        }
                    </div>


                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

