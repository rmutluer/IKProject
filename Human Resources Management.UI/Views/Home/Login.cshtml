<body style="background-color: #e4d8da;">

    <div class="limiter">
        <div class="container-lg" style="background-color: #e4d8da; margin-left: 40%; margin-top: 5%;">
            <div class="wrap-login100 p-t-30 p-b-50">
                <img style="width:150px;height:150px;margin-left:120px" src="~/images/loginfoto.png" />
                <form style=" border:groove;" class="login100-form validate-form p-b-33 p-t-5" asp-controller="Home" asp-action="Login" method="post">
                    <div class="container-login100-form-btn m-t-32">
                        @if (ViewBag.Hata != null)
                        {
                            <p class="text-danger">@ViewBag.Hata</p>
                        }
                        @if (ViewBag.Hata2 != null)
                        {
                            <p class="text-danger">@ViewBag.Hata2</p>
                        }
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">

                        <input class="input100" type="text" name="email" placeholder="Email">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="wrap-input100 validate-input field" data-validate="Enter password">

                        <div class="row">
                            <div class="col-9">
                                <input class="input100" type="password" name="password" id="password" placeholder="Şifre">
                            </div>
                            <div class="col-3 mt-3">
                                <i class="circular eye link icon" onclick="togglePassword()"></i>
                            </div>
                        </div>



                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>
                    @*<div class="wrap-input100 validate-input field" data-validate="Enter password" style="text-align:center">
                            <span class="mr-auto">Parolayı Göster/Gizle   </span> <i class="circular eye link icon " style="" onclick="togglePassword()"></i>
                        </div>*@


                    <div class="container-login100-form-btn m-t-32">

                        <input class="btn"  style="color: white; background-color: #478ba2;  border-radius: 40px; width: 55%; font-size:large; " value="GİRİŞ YAP" type="submit" />

                    </div>

                    <div class="container-login100-form-btn m-t-32">

                        <a class="text-primary" asp-action="Reset"><i class="ion ion-md-alert"></i>  Şifremi Unuttum</a>
                    </div>

                </form>
            </div>
        </div>
    </div>


