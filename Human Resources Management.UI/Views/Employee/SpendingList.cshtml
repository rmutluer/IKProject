@model Human_Resources_Management.ENTITIES.ViewModel.SpendingPerson

@{
    ViewData["Title"] = "SpendingList";
    Layout = "_LayoutManager";
}


<body style="background-color: #f2edf3 ">
    <div  class="container-fluid" style="overflow:scroll">
        <table class="table table-bordered table-hover table-striped table-responsive">
            <thead>
                <tr>
                    <th>
                        <b>Harcama Talep Tarihi</b>
                    </th>
                    <th>
                        <b>Harcama Cevap Tarihi</b>
                    </th>
                    <th>
                        <b> Harcama Tutarı</b>
                    </th>
                    <th>
                        <b>Harcama Türü</b>
                    </th>
                    <th>
                        <b>Para Birimi</b>
                    </th>
                    <th>
                        <b>Durum</b>
                    </th>
                    @*<th>
                        <b>Personel Adı Soyadı</b>
                    </th>*@
                    @*<th>
                        ID
                    </th>*@
                    <th>
                        <b>Harcama Belgesi</b>
                    </th>
                    @*<th>
                        IsActive
                    </th>*@
                    <th><b>İşlemler</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Expenses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpendingRequestDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpendingResponseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Spending)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SpendingType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AproveStatus)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PersonID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>*@
                        <td>
                            <img src="/img/@item.PhotoName" />
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>*@
                    <td>
                        @if (item.AproveStatus == AproveStatus.OnayBekliyor)
                        {
                            <a class="btn form-control" style="color: white; background-color: #478ba2;  border-radius: 40px; width: 100%; " asp-action="UpdateSpending" asp-controller="Employee" asp-route-id="@item.ID">Güncelle</a>
                        }
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>


