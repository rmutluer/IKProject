@model Human_Resources_Management.ENTITIES.ViewModel.PeoplePayment

@{
    ViewData["Title"] = "GetPaymentList";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<body style="background-color: #f2edf3;">
    <div overflow: scroll;" class="container-fluid">
        <table class="table table-bordered table-hover table-striped table-responsive">
            <thead>
                <tr>
                    <th>
                        <b>Avans Talep Tarihi</b>
                    </th>
                    @*<th>
                            AvansResponseDate
                        </th>*@
                    <th>
                        <b>Açıklama</b>
                    </th>
                    <th>
                        <b>Avans</b>
                    </th>
                    <th>
                        <b>Birimi</b>
                    </th>
                    <th>
                        <b>Onay Durumu</b>
                    </th>

                    <th><b>İşlemler</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AdvancePayments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvansRequestDate)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.AvansResponseDate)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Avans)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriceUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AproveStatus)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.PersonID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhotoName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>*@

                        <td>
                            @if (item.AproveStatus == AproveStatus.OnayBekliyor)
                            {
                                <a asp-action="ApprovalPayment" asp-controller="Manager" asp-route-id="@item.ID" class="btn" style="color: white; background-color: #478ba2; border-radius: 60px;  width: 100%;">Düzenle</a>
                            }


                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>


